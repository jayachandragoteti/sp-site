{
	"name": "@slidewave/gitignore-include",
	"version": "1.0.5",
	"description": "Processes include directives placed in gitignore and compatible files",
	"main": ".build/index.js",
	"typings": ".build/index.d.ts",
	"files": [
		".build/**/*"
	],
	"scripts": {
		"build": "npm run clean && tsc --project tsconfig.production.json && npx shx chmod +x .build/cli*.js",
		"clean": "npx -q rimraf .build",
		"lint": "npx -q eslint --max-warnings=0 '**'",
		"prepare": "npx -q patch-package && npx -q ts-node --project tsconfig.production.json src/util/postinstall.ts",
		"prepublishOnly": "npm run lint && npm run build",
		"test": "npx -q mocha --exit --timeout 60000 --require ts-node/register --file src/test/beforeAll.ts src/**/*.test.ts",
		"test-build": "exit 0; npx -q mocha --exit --timeout 60000--file .build/test/beforeAll.js .build/**/*.test.js"
	},
	"bin": {
		"giiclean": ".build/giiclean.js",
		"giicleanpipe": ".build/cliFilterClean.js",
		"giismudge": ".build/giismudge.js",
		"giismudgepipe": ".build/cliFilterSmudge.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SlideWave/gitignore-include.git"
	},
	"keywords": [
		"gitignore",
		"prettierignore",
		"eslintignore",
		"includes",
		"include"
	],
	"author": "Ricky Curtice <kf6kjg+npm@gmail.com> (http://rwcproductions.com)",
	"license": "UNLICENSED",
	"bugs": {
		"url": "https://github.com/SlideWave/gitignore-include/issues"
	},
	"homepage": "https://github.com/SlideWave/gitignore-include#readme",
	"engines": {
		"node": ">=12"
	},
	"dependencies": {
		"@types/minimist": "^1.2.0",
		"fast-glob": "^3.2.2",
		"follow-redirects": "^1.11.0",
		"minimist": "^1.2.5"
	},
	"devDependencies": {
		"@schemastore/package": "0.0.5",
		"@types/chai": "^4.2.11",
		"@types/chai-as-promised": "^7.1.2",
		"@types/follow-redirects": "^1.8.0",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.13.4",
		"@typescript-eslint/eslint-plugin": "^2.31.0",
		"@typescript-eslint/parser": "^2.31.0",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"cross-env": "^7.0.2",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-json": "^2.1.1",
		"eslint-plugin-markdown": "^2.0.0-alpha.0",
		"eslint-plugin-yaml": "^0.1.3",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.2",
		"mocha": "^7.1.2",
		"patch-package": "^6.2.2",
		"prettier": "^2.0.5",
		"rimraf": "^3.0.2",
		"shx": "^0.3.2",
		"ts-node": "^8.10.1",
		"typescript": "^3.8.3"
	}
}
